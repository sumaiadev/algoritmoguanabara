Var
// Seção de Declarações das variáveis 
   num: inteiro
   resposta: caractere
   
funcao parouimpar(a: inteiro) : caractere
var
   res: caractere
inicio
   se (a % 2 = 0) entao
      res <- "PAR!"
   senao
      res <- "IMPAR!"
   fimse
   
   retorne res
fimfuncao
   
   

